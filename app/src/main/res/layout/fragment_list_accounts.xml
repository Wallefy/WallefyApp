<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dpene.wallefy.controller.fragments.ListAccountsFragment">

    <com.dd.ShadowLayout
        android:id="@+id/main_info_shadow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sl_cornerRadius="0dp"
        app:sl_dx="0dp"
        app:sl_dy="3dp"
        app:sl_fillColor="@color/color_orange_white"
        app:sl_shadowColor="@color/color_shadow"
        app:sl_shadowRadius="5dp">

        <RelativeLayout
            android:id="@+id/list_accounts_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/add"
                android:textSize="@dimen/row_account_text_size" />

            <ImageButton
                android:id="@+id/list_accounts_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/plus_28"
                android:textSize="@dimen/row_account_text_size" />

        </RelativeLayout>
    </com.dd.ShadowLayout>

    <ListView
        android:id="@+id/list_accounts_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin">

    </ListView>

</LinearLayout>
