<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_details_layout"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".controller.fragments.DetailsTransactionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/description_note"
                android:textSize="@dimen/description_text_size" />

            <EditText
                android:id="@+id/details_transaction_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="fdfdfdsfs"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/description_date"
                android:textSize="@dimen/description_text_size" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/details_transaction_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:textSize="@dimen/description_text_size" />

                <ImageButton
                    android:id="@+id/description_calendar_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:src="@drawable/calendar" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/description_location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:text="@string/description_location"
                    android:textSize="@dimen/description_text_size" />

                <ImageButton
                    android:id="@+id/description_location_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:src="@drawable/geo_fence" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/description_picture_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:text="@string/description_picture"
                    android:textSize="@dimen/description_text_size" />

                <ImageButton
                    android:id="@+id/description_camera_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:src="@drawable/camera" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/description_picture_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="@dimen/description_picture_padding"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
